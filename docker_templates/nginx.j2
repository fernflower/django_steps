# mysite_nginx.conf

upstream django {
    server unix:///django_steps/mysite/mysite.sock; 
}

# configuration of the server
server {
    gzip on;
    gzip_disable "msie6";

    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;

    # the port your site will be served on
    listen      {{NGINX_PORT}};
    server_name {{NGINX_HOST}}; # substitute your machine's IP address or FQDN
    charset     utf-8;

    # max upload size
    client_max_body_size 75M;   # adjust to taste

    location /en/{{DJANGO_STATIC_URL}} {
        alias /django_steps/mysite/static/;
    }

    location /ru/{{DJANGO_STATIC_URL}} {
        alias /django_steps/mysite/static/;
    }

    location / {
        uwsgi_pass unix:///django_steps/mysite/mysite.sock; 
        include uwsgi_params;
    }
}
